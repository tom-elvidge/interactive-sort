@page "/"

@using MergeSortWeb.Pages.Store

<PageTitle>Merge Sort</PageTitle>

<MudText Typo="Typo.h3" GutterBottom="true">Hello!</MudText>
<MudText Class="mb-8">The current count is @State.Value.Count</MudText>
<MudButton OnClick="@(() => Dispatcher.Dispatch(new IncrementCount()))">Increment</MudButton>

@code
{
    [Inject]
    public IState<MergeSortState> State { get; set; } = null!;

    [Inject]
    public IDispatcher Dispatcher { get; set; } = null!;
}
